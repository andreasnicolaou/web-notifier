{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "typeRoots": ["node_modules/@types", "./types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["jest", "node"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "include": ["src/**/*.ts", "**/*.spec.ts"],
  "exclude": ["node_modules", "dist"],
  "lib": ["esnext", "dom"]
}
